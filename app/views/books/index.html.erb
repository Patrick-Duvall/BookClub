<section id='statistics'>
  <p id='highest_rated'>Highest Rated: <% @highest_3.each do |book| %>
  <%= book.title %>
<% end %></p>
  <p id='lowest_rated'> Lowest Rated:  <% @lowest_3.each do |book| %>
  <%= book.title %>
<% end %> </p>
  <p id='most_ratings'>Most Reviews: <% @three_ratingest_users.each do |user| %>
  <%= user.name %>,
  <%= user.reviews.count %> Reviews
<% end %> </p>

</section>

<% @books.each do |book|  %>
 <section class='books' id="book-<%= book.id %>">
   <p>Title: <%= book.title %></p>
   <p>Author: <% book.authors.each do |author| %>
     <%= author.name %>
     <% end %>

     </p>
   <p>Page Count: <%= book.pages %></p>
   <p>Published In: <%= book.published %></p>
   <p>Average Review: <%=
      (book.review_average.to_f.round(2)) %></p>
   <p>Total Reviews: <%= book.review_count %></p>
   <% end %>
 </section>
