
<%= form_for @book do |f| %>
  <p class='book_form'>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </p>
  <p class='book_form'>
    <%= f.label :pages %>
    <%= f.number_field(:pages, in: 1..5000, step: 1) %>
  </p>
  <p class='book_form'>
    <%= f.label :published %>
    <%= f.number_field(:published, in: 1..Time.now.year, step: 1) %>
  </p>
  <p class='book_form'>
    <%= f.label :authors %>
    <%= f.text_field :authors, value: '', required: true %>
  </p>
  <p class='book_form'>
    <%= f.label :image_url %>
    <%= f.url_field :image_url, value: ''  %>
  </p>
  <p class='book_form'><%= f.submit %><p>
<% end %>
