
<h1>Create Review for <%= @book.title %></h1>
<%= form_for [@book, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :rating %>
  <%= f.number_field(:rating, in: 1..5, step: 1) %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.submit %>

<% end %>
